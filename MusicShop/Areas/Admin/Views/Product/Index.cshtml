
@model List<Product>

<div class="card shadow border-0 my-4 text-center">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>

            </div>

        </div>
    </div>
    <div class="card-body p-4 text-center">

        <div class="row pb-3 ">
            <div class="col-6">
            </div>

            <div class="col-6 text-end">

                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Product
                </a>

            </div>
        </div>


        <table id="tblData" class="table table-bordered table-striped text-center">

            <thead>
                <tr>
                    
                    <th> Product Name</th>
                    <th> Description</th>
                    <th> Price</th>
                    <th>Category</th>
                    <th>Action</th>


                </tr>
            </thead>
         
        </table>




    </div>
</div>

@section Scripts{

    <script src="~/js/Product.js"></script>
}
